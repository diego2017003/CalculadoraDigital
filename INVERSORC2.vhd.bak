ENTITY INVERSORc2 IS 
	PORT(
		E1:IN BIT_VECTOR(3 DOWNTO 0);
		nE:OUT BIT_VECTOR(3 DOWNTO 0);
	Cout:OUT BIT);
END INVERSORc2;
ARCHITECTURE invertec2 OF INVERSORc2 IS
COMPONENT SOMA4BITS
	PORT(Carryin:IN BIT;
		X1,X2:IN BIT_VECTOR(3 DOWNTO 0);
		Sout:OUT BIT_VECTOR(3 DOWNTO 0);
	Carryout:OUT BIT);
END COMPONENT;
SIGNAL c:BIT_VECTOR(3 DOWNTO 0);
SIGNAL d:BIT_VECTOR(3 DOWNTO 0);
BEGIN
	c(0)<=NOT(E1(0));
	c(1)<=NOT(E1(1));
	c(2)<=NOT(E1(2));
	c(3)<=NOT(E1(3));
	d(0)<='1';
	d(1)<='0';
	d(2)<='0';
	d(3)<='0';
	Inv:SOMA4BITS PORT MAP(Carryin=>'0',X1=>c,X2=>d,Sout=>nE,Carryout=>Cout);
END invertec2;
