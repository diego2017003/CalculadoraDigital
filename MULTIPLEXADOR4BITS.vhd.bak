ENTITY MULTIPLEXADOR4BITS IS 
	PORT(
		Em14B,Em24B,Em34B,Em44B,Em54B,Em64B:IN BIT_VECTOR(3 DOWNTO 0);
		Em11B,Em21B,Em31B,Em41B,Em51B,Em61B:IN BIT;
		S01,S11,S21:IN BIT;
		VetorSaida:OUT BIT_VECTOR(3 DOWNTO 0);
		Cout:OUT BIT);
END MULTIPLEXADOR4BITS;
ARCHITECTURE mux4BIT OF MULTIPLEXADOR4BITS IS
SIGNAL i1,i2,i3,i4,i5,i6:BIT;
COMPONENT MULTIPLEXADOR1BIT
PORT(
		Em1,Em2,Em3,Em4,Em5,Em6:IN BIT;
		S0,S1,S2:IN BIT;
		Saida:OUT BIT);
END COMPONENT;
BEGIN
g:FOR i IN 0 TO 3 GENERATE
mux: MULTIPLEXADOR1BIT PORT MAP(Em1=>Em14B(i),Em2=>Em24B(i),Em3=>Em34B(i),Em4=>Em44B(i),Em5=>'0',Em6=>'0',S0=>S01,S1=>S11,S2=>S21,Saida=>VetorSaida(i));
END GENERATE;
muxCout: MULTIPLEXADOR1BIT PORT MAP(Em1=>Em11B,Em2=>Em21B,Em3=>Em31B,Em4=>Em41B,Em5=>Em51B,Em6=>Em61B,S0=>S01,S1=>S11,S2=>S21,Saida=>Cout);
END mux4BIT;
