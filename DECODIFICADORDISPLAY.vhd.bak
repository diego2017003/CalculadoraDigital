ENTITY DECODIFICADORDISPLAY IS 
	PORT(
		ED:IN BIT_VECTOR(3 DOWNTO 0);
		VetorSaida:OUT BIT_VECTOR(6 DOWNTO 0));
END DECODIFICADORDISPLAY;
ARCHITECTURE converteDisplay OF DECODIFICADORDISPLAY IS
BEGIN
vetorSaida(0)<=((ED(3) XNOR ED(2))AND(NOT(ED(1)))AND((ED(0))))OR((NOT(ED(3)))AND(ED(2))AND(NOT(ED(1)))AND(NOT(ED(0))))OR((ED(3))AND(NOT(ED(2))AND(ED(1))AND(ED(0)))); 
vetorSaida(1)<=(ED(1)AND(ED(2))AND(NOT(ED(0))))OR(ED(3)AND(ED(2))AND(NOT(ED(0))))OR(ED(1)AND(ED(3))AND(ED(0)))OR((NOT ED(1))AND(ED(2))AND(ED(0))AND(NOT(ED(3))));
vetorSaida(2)<=((NOT ED(3))AND(ED(1))AND(NOT ED(2))AND(NOT(ED(0))))OR((ED(3))AND(ED(2))AND((ED(1))OR(NOT ED(0))));
vetorSaida(3)<=(ED(0)AND((ED(1)AND(ED(2)))OR((NOT ED(1))AND(NOT ED(2))AND(NOT(ED(3))))))OR((NOT ED(0))AND(((ED(1))AND((NOT ED(2))AND((ED(3)))))OR((NOT ED(1))AND(ED(2))AND(NOT(ED(3))))));
vetorSaida(4)<=(ED(0)AND((NOT(ED(3)))OR((NOT ED(2))AND(NOT ED(1)))))OR((NOT ED(3))AND(ED(2))AND(NOT ED(1)));
vetorSaida(5)<=((NOT ED(3))AND(NOT ED(2))AND(ED(1) OR ED(0)))OR(ED(0)AND(((NOT ED(3))AND(ED(1)))OR((ED(3))AND(ED(2))AND(NOT ED(1)))));
vetorSaida(6)<=((NOT ED(3))AND(((NOT ED(2))AND(NOT ED(1)))OR((ED(2))AND(ED(1))AND(ED(0)))))OR((ED(3))AND(ED(2))AND(NOT ED(1))AND(NOT ED(0)));

END converteDisplay;
